# ~/.config/yt-dlp/config
# NOTE: -o is handled by yt.sh, do not set here when using the script

--audio-format m4a
--audio-quality 0
--concurrent-fragments 4
--write-thumbnail
--convert-thumbnails jpg
--downloader aria2c
--downloader-args "aria2c:-x 16 -s 16 -k 1M"
--embed-chapters
--embed-metadata
--embed-thumbnail
--no-keep-video
--no-mtime
--postprocessor-args "ffmpeg:-af loudnorm=I=-14:TP=-1:LRA=11 -c:a aac -b:a 256k"
--progress
--sponsorblock-mark all
--sponsorblock-remove all,-filler
-f bestaudio/best
-x
